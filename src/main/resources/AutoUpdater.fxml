<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.coryrobertson.AutoUpdater.UpdaterController">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" height="400.0" stroke="BLACK" strokeType="INSIDE" width="600.0">
         <fill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </fill>
      </Rectangle>
      <Button fx:id="updaterButton" layoutX="181.0" layoutY="283.0" mnemonicParsing="false" onAction="#runUpdater" prefHeight="55.0" prefWidth="279.0" text="Download latest version" />
      <ToolBar layoutY="40.0" prefHeight="100.0" prefWidth="600.0">
         <items>
            <Text boundsType="VISUAL" strokeType="OUTSIDE" strokeWidth="0.0" text="URL:                   " wrappingWidth="40.0" />
            <TextField fx:id="urlText" onAction="#urlInputFieldEntered" prefHeight="26.0" prefWidth="501.0" promptText="e.g. https://github.com/CoryRobertson/Datapacks/releases/latest/download/Datapacks.7z" />
         </items>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </ToolBar>
      <ToolBar layoutY="140.0" prefHeight="100.0" prefWidth="600.0">
         <items>
            <Text boundsType="VISUAL" strokeType="OUTSIDE" strokeWidth="0.0" text="Destination:" wrappingWidth="79.13671875" />
            <TextField fx:id="destinationText" onAction="#destinationInputFieldEntered" prefHeight="25.0" prefWidth="463.0" promptText="e.g. ./output/" />
         </items>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </ToolBar>
      <ImageView fx:id="completionImage" fitHeight="100.0" fitWidth="109.0" layoutX="28.0" layoutY="261.0" opacity="0.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@ThumbsUp.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
